worker_processes 1;
events { worker_connections 1024; }

http {
    include mime.types;
    sendfile on;

    server {
        listen <%= ENV["PORT"] %>;
        server_name _;
        root <%= ENV["NGINX_ROOT"] || "." %>;

        location / {
            index index.html;
        }

        error_page 404 /index.html;
    }
}
